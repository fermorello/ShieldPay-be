
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  email         String   @unique
  password      String
  wallets       Wallet[] // Aquí se define la relación uno a muchos

  @@map("users")
  @@index([id])  
  @@index([email])  
}

model Wallet {
  id            Int      @id @default(autoincrement())
  tag           String?
  chain         String
  address       String
  user_id       Int
  user          User     @relation(fields: [user_id], references: [id]) // Relación con el modelo User

  @@map("wallets")
  @@index([id])  
}
