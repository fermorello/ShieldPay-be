
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  email         String   @unique
  password      String
  wallets       Wallet[] // Aquí se define la relación uno a muchos

  @@map("users")
  @@index([id])  
  @@index([email])  
}

model Wallet {
  id            Int      @id @default(autoincrement())
  tag           String?
  address       String
  user_id       Int
  user          User     @relation(fields: [user_id], references: [id]) 
  chain_id      Int      
  chain         Chain    @relation(fields: [chain_id], references: [id]) 

  @@map("wallets")
  @@index([id])  
}

model Chain {
  id            Int      @id @default(autoincrement())
  name          String
  description   String
  wallets       Wallet[] 

  @@map("chains")
  @@index([id])  
}